%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left.ml-15{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: main_app.root_path} BookStore
      %a.shop-link.pull-right.visible-xs{href: '#'}
      %a.shop-link.pull-right.visible-xs{href: engine_cart.cart_path}
        %span.shop-icon<
          - unless current_order.order_items.empty?
            %span.shop-quantity= current_order.order_items.only_products.count
    // %a.shop-link.pull-right.hidden-xs{href: '#'}
    %a.shop-link.pull-right.hidden-xs{href: engine_cart.cart_path}
      %span.shop-icon<
        - if current_order.order_items.present?
          %span.shop-quantity= current_order.order_items.only_products.count
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} Home
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              - @categories.each do |category|
                %li
                  %a.collapse-link{href: main_app.root_path(:category => category)}= category.name
          %li
            %a{href: products_path} Shop
          - if signed_in?
            %li
              %a{type: "button", 'data-toggle': "collapse", href: "#menu_account", 'aria-expanded': "false", 'aria-controls': "menu"} My account
              %ul#menu_account.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
                %li
                  // %a.collapse-link{href: '#'} Orders
                  %a.collapse-link{href: orders_path} Orders
                %li
                  %a.collapse-link{href: edit_user_registration_path} Settings
                - if current_user.role?(:admin)
                  %li
                    %a.collapse-link{href: admin_root_path} Admin Panel
            %li
              %a{href: destroy_user_session_path, method: :delete} Log out
          - else
            %li
              %a{href: new_user_session_path} Log in
            %li
              %a{href: new_user_registration_path} Sign up
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Home
            %ul.dropdown-menu
              - @categories.each do |category|
                %li
                  %a{href: main_app.root_path(:category => category)}= category.name
          %li.dropdown
            %a{href: products_path} Shop
          - if signed_in?
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} My account
              %ul.dropdown-menu
                %li
                  // %a{href: '#'} Orders
                  %a{href: orders_path} Orders
                %li
                  %a{href: edit_user_registration_path} Settings
                - if current_user.role?(:admin)
                  %li
                    %a{href: admin_root_path} Admin Panel                  
                %li.divider{role: "separator"}
                %li
                  %a{href: destroy_user_session_path, method: :delete} Log out
          - else
            %li
              %a{href: new_user_session_path} Log in
            %li
              %a{href: new_user_registration_path} Sign up
