%main.container
  .text-center
    %h3.general-login-title= t('.set_password')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'general-form' }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .form-group.mb-30
      %label.control-label.font-weight-light{for: :password}= t('.type_password')
      = f.password_field :password, autofocus: true, autocomplete: "off", type: "password", placeholder: t('.type_password'), class: 'form-control'
    .form-group.mb-40
      %label.control-label.font-weight-light{for: :password_confirmation}= t('.confirm_password')
      = f.password_field :password_confirmation, autocomplete: "off", type: "password", placeholder: t('.confirm_password'), class: 'form-control'
    = f.submit t('.change'), class: 'btn btn-default center-block mb-20'
