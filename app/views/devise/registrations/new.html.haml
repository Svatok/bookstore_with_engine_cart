%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign Up
    %a.general-login-icon{href: user_facebook_omniauth_authorize_path}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "general-form"}) do |f|
    = devise_error_messages!
    .form-group.mb-30
      %label.control-label.font-weight-light{for: "user_email"} Enter Email
      = f.email_field :email, autofocus: true, class: "form-control", type: "email", placeholder: "Enter Email"
    .form-group.mb-30
      %label.control-label.font-weight-light{for: "user_password"} Password
      = f.password_field :password, autocomplete: "off", class: "form-control", type: "password", placeholder: "Password"
    .form-group.mb-30
      %label.control-label.font-weight-light{for: "user_password_confirmation"} Confirm Password
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", type: "password", placeholder: "Confirm Password"
    .text-center
      = f.submit "Sign Up", class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    Have an Account?
    =link_to "Log in", new_session_path(resource_name), class: 'in-gold-500'
