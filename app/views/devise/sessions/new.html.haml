%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log In
    %a.general-login-icon{href: user_facebook_omniauth_authorize_path}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "general-form"}) do |f|
    .form-group.mb-30
      %label.control-label.font-weight-light{for: "user_email"} Enter Email
      = f.email_field :email, autofocus: true, class: "form-control", type: "email", placeholder: "Enter Email"
    .form-group.mb-30
      %label.control-label.font-weight-light{for: "user_password"} Password
      = f.password_field :password, autocomplete: "off", class: "form-control", type: "password", placeholder: "Password"
      = link_to "Forgot password?", new_password_path(resource_name), class: "help-block in-gold-500"
    .form-group.checkbox.text-center.mb-30
      %label.font-weight-light.pl-0
        = f.check_box :remember_me, class: 'checkbox-input', hidden: "true"
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text Remember me
    .text-center
      = f.submit "Log in", class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    Donâ€™t have an Account?
    =link_to "Sign up", new_registration_path(resource_name), class: 'in-gold-500'
